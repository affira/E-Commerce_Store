{
  "name": "comp-se-200-testing",
  "version": "1.0.0",
  "description": "Software Testing Assignment",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage && coveralls < coverage/lcov.info"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "babel-jest": "^29.7.0",
    "coveralls": "^3.1.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/.internal/**"
    ]
  }
}
