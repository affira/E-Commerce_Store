{
  "name": "software-testing-assignment",
  "version": "1.0.0",
  "description": "Software Testing Assignment for utility functions",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --config jest.config.mjs",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch --config jest.config.mjs",
    "test:coverage": "jest --coverage --config jest.config.js",
    "coverage": "jest --coverage && coveralls < coverage/lcov.info",
    "lint": "eslint src test"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "babel-jest": "^29.7.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.54.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  }
}
